<!DOCTYPE HTML>

<% layout('/layouts/boilerplate2')%>
<div class="container">
	<div class="text-center mt-3">
		<h1>Welcome To SkateGrounds</h1>
		<h2>Check out these spots</h2>
	</div>
		 <% for (let spot of  spots) {%>
		 <div class="card mb-2">
				<div class="row">
						<div class="col-md-4">
							<a href="/skategrounds/<%= spot.id %>"><img class="img-fluid" src="<%= spot.image%>"></a>
						</div>
						<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title"><a href="/skategrounds/<%= spot.id %>"><%=spot.title %></a></h5>
									<p class="card-text"><%= spot.description %></p>
								</div>
						</div>
				</div>
		 </div>
			<% } %>
	<div id="buttons">
		<a class="btn btn-success bt-lg" href="/skategrounds/new">Add New Skate Spot</a>
	</div>
</div>
