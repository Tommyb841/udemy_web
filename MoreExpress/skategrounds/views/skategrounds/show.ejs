<!DOCTYPE HTML 5>	

<% layout('/layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css" >
<!-- skateground display -->
<!--  <link href="/stylesheets/skategrounds.css" rel="stylesheet">-->
<success>
<div class="row mt-3" id="spot display">
	<div class="col-6" id="title">
		<div class="card">
			<img src="<%= spot.image %>" class="card-img-top">
			<div class="card-body">
				<h5 class="card-title"><%=spot.title %></h5>
				<p class="card-text"><%=spot.description %></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item text-muted">Location N/A</li>
				<p class="card-text">Created by: <%=spot.author.username%></p>
			</ul>
			<% if (currentUser && spot.author.equals(currentUser._id)){ %>
			<div class="card-body" id="shw_crd_bttns">
				<a href="/skategrounds/<%=spot._id%>/edit" class="card-link btn btn-info">Edit</a>
				<form class="d-inline" action="/skategrounds/<%=spot._id%>?_method=DELETE" method="POST" id="delForm">
						<button class="btn btn-danger" action="delForm">Delete</button>
				</form>
			</div>
			<% }%>
		</div>
	</div>
	<!-- review -->
	<div class="col-6">
		<% if (currentUser) { %>
		<h2 class="mt-3">Leave a review</h2>
		<form action="/skategrounds/<%=spot._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate name="review">
			<!-- <div class="mb-3">
				<label class="form-label" for="rating">Rating</label>
				<input class="form-range" type="range" name="review[rating]" min="1" max="5" id="rating">
			</div> -->
			<fieldset class="starability-basic">
				<legend>First rating:</legend>
				<input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
				<input type="radio" id="first-rate1" name="review[rating]" value="1" />
				<label for="first-rate1" title="Terrible">1 star</label>
				<input type="radio" id="first-rate2" name="review[rating]" value="2" />
				<label for="first-rate2" title="Not good">2 stars</label>
				<input type="radio" id="first-rate3" name="review[rating]" value="3" />
				<label for="first-rate3" title="Average">3 stars</label>
				<input type="radio" id="first-rate4" name="review[rating]" value="4" />
				<label for="first-rate4" title="Very good">4 stars</label>
				<input type="radio" id="first-rate5" name="review[rating]" value="5" />
				<label for="first-rate5" title="Amazing">5 stars</label>
			</fieldset>


			<div class="mb-3">
				<label class="form-label" for="body">Reviews</label>
				<textarea class="form-control" name="review[body]" rows="3" cols="10" id="body" required></textarea>
			</div>	
			<button class="btn btn-success">Submit</button>
		</form>
		<% } %>
		<%for ( let review of spot.reviews) { %>		
		<div class="card mb-3">
			<div class="card-body ">
				<h5 class="card-title"><%= review.author.username %></h5>
					 <p class="starability-result" data-rating="<%=review.rating%>">
                    Rated: <%= review.rating %> stars
                </p>
				<p class="card-text">Review: <%=  review.body %></p>
				<% if (currentUser && review.author.equals(currentUser._id)){ %>
				<form action="/skategrounds/<%= spot._id%>/reviews/<%= review._id%>?_method=DELETE" method="POST">
					<button class="btn btn-sm btn-danger" action="delForm">Delete</button>
				</form>
				<% } %>
			</div>
		</div>
		<% } %>
	</div>
</div>
<!-- add location, border -->
