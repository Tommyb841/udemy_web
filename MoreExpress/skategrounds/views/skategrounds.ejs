<!DOCTYPE HTML>

<div class="container">
	<%- include("partials/header") %>
	<header class="jumbotron">
		<h1>Welcome To SkateGrounds</h1>
		<p>Check out these spots near by</p>
		<a class="btn btn-primary bt-lg"href="/skategrounds/new">Add  New SkateGround</a>
	</header>
			 
	
	<div class="spots">
		<% skategrounds.forEach(function(skateground){ %>
			<div id="areas">
				<h4><%= skateground.name %> </h4>
				<img src="<%=skateground.image  %>">
			</div>
		<% }) %>
	</div>
	<%- include("partials/footer")  %>
</div>
