<!DOCTYPE HTML>
<% layout('/layouts/boilerplate')%>
<div class="container mt-3" id="inputForm">
 <div class="row">
  <h1 class="text-center">Login</h1>
   <div class="col-6 offset-3">
    <form action="/login" method="POST" id="login" class="validated-form" novalidate>
     <div>
      <label class="form-label" for="username">Username</label>
      <input class="form-control mb-2"type="text" name="username" id="username" required>
     </div>
     <div>
      <label class="form-label" for="password">Password</label>
      <input class="form-control mb-2" type="password" name="password" id="password" required></input>
     </div>
      <button type="submit" class="btn btn-primary" form="login">Login</button>
    </form>
   </div>
 </div>
</div>
